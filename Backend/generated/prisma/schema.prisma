generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  avatar    String
  name      String
  email     String   @unique
  age       Int?
  phone     String?  @unique
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
